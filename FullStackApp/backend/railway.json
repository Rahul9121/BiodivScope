{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn app_debug:app --bind 0.0.0.0:$PORT --workers 1 --timeout 300 --log-level info",
    "restartPolicyType": "on_failure"
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHONPATH": "/app",
        "NODE_ENV": ""
      }
    }
  }
}
