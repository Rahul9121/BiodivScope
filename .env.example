# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://biodivuser:your_secure_database_password_here@localhost:5432/biodivproscope

# Flask Configuration
SECRET_KEY=your_super_secure_secret_key_change_this_immediately
FLASK_ENV=production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Frontend Domain (for CORS and redirects)
FRONTEND_DOMAIN=your-frontend-domain.com

# External APIs
NOMINATIM_API_URL=https://nominatim.openstreetmap.org/search
NOMINATIM_USER_AGENT=BiodivProScopeApp/1.0

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# AWS Configuration (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=biodivproscope-reports
AWS_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Email Configuration (for notifications, optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Production specific
NODE_ENV=production
PYTHONPATH=/app
