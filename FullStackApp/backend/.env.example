# Flask Configuration
SECRET_KEY=your_secret_key_change_in_production
FLASK_ENV=production

# Database Configuration (Railway will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# OR individual database settings for local development
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=postgres
DB_PORT=5432

# CORS Configuration (add your Vercel domain here)
CORS_ORIGINS=https://your-vercel-domain.vercel.app,http://localhost:3000

# Port (Railway will set this automatically)
PORT=8000
